{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "ubuntu14lts",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-9a562df2",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "base-curbix Ubuntu 14.04.1 LTS {{timestamp}}"
    },
    {
      "type": "amazon-ebs",
      "name": "freebsd10",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-34b5205c",
      "instance_type": "m3.medium",
      "ssh_username": "ec2-user",
      "ami_name": "base-curbix FreeBSD 10.1-RELEASE {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-add-repository -y ppa:ansible/ansible",
        "sudo apt-get update",
        "sudo apt-get -y install ansible"
        ],
      "only": [
        "ubuntu14lts"
      ]
    },
    {
      "type": "shell",
      "inline": [        
        "su - << EOF",
        "pkg install -y sudo python ansible",
        "echo \"%wheel ALL=(ALL) NOPASSWD: ALL\" >> /usr/local/etc/sudoers.d/wheel",
        "EOF"
      ],
      "only": [
        "freebsd10"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": [
        "roles/base",
        "roles/ntp",
        "roles/python3",
        "roles/logging"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo reboot",
        "sleep 60"
         ],
      "only": [
        "ubuntu14lts"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "curl -sSL https://get.docker.com/ubuntu/ | sudo sh",
        "sudo docker pull sgarlick987/logging",
        "sudo docker pull sgarlick987/aws-startup-utils",
        "sudo docker pull sgarlick987/statsd",
        "sudo docker pull sgarlick987/consul"
      ],
      "only": [
        "ubuntu14lts"
      ]
    }
  ]
}
